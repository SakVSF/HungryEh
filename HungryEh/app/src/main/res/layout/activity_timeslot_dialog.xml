<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".TimeslotDialog">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textview_timeslot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Select Collection Timeslot"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/timeviewmsg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Current Time:" />

        <NumberPicker
            android:id="@+id/timeslotPicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:enabled="false"
            android:id="@+id/button_confirmTimeslot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm Timeslot" />

    </LinearLayout>


</RelativeLayout>