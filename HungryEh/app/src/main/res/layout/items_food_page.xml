<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="4dp"
    android:paddingRight="4dp"
    android:translationY="5dp"
    tools:context=".stall_item_page_activity">

    <TextView
        android:id="@+id/foodpage_dish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="foodpage_dish"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"


        android:translationY="5dp" />

    <TextView
        android:id="@+id/foodpage_stall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="foodpage_stall"
        android:translationY="20dp" />


    <ImageView
        android:id="@+id/imagein"
        android:layout_width="395dp"
        android:layout_height="335dp"
        android:cropToPadding="true"
        android:translationY="35dp"
        tools:src="@mipmap/ic_launcher_round" />


    <TextView
        android:id="@+id/cost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:layout_weight="1"
        android:fontFamily="sans-serif-black"
        android:text="Price"
        android:textStyle="italic"
        android:translationY="50dp"/>

    <TextView
        android:id="@+id/ind_allergens"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:layout_weight="1"
        android:text="Allergens"
        android:translationY="50dp"/>

    <TextView
        android:id="@+id/ind_veg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:layout_weight="1"
        android:text="Veg"
        android:translationY="50dp"/>


    <TextView
        android:id="@+id/favtext"
        android:layout_width="387dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="270dp"
        android:layout_marginRight="50dp"
        android:clickable="true"
        android:fontFamily="sans-serif-black"
        android:gravity="center_vertical"
        android:text="Add To Favourites"
        android:textColor="@color/teal_700"
        android:textStyle="bold|italic"
        android:translationY="-10dp" />

    <ImageView
        android:id="@+id/favimage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="300dp"
        android:background="@android:color/transparent"
        android:padding="2dp"
        android:src="@drawable/ic_baseline_favorite_border_24"
        android:translationY="-10dp">

    </ImageView>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/preorder_time_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@android:color/darker_gray"
                android:translationY="10dp"/>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="4dp"
                android:paddingTop="0dp"
                android:paddingRight="4dp"
                android:paddingBottom="4dp"
                android:translationY="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:text="Preorder Time"
                    android:textColor="@color/teal_700"
                    android:textSize="25dp"
                    android:translationY="10dp"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Choose Your Collection Time Slot"
                    android:translationY="-19dp"/>

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="81dp"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:paddingLeft="16dp"
                    android:paddingTop="10dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="10dp"
                    android:id="@+id/schedule_selection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:drawableLeft="@drawable/ic_baseline_schedule_24"
                    android:drawablePadding="4dp"
                    android:gravity="center_vertical"
                    android:layout_marginTop="0dp"
                    android:textSize="18dp"
                    android:text="Select a time"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/elegantbutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/reducequantity"
                android:layout_width="52dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:text="-"
                android:textColor="@color/white"
                android:background="@color/teal_700"
                android:textSize="27dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:translationY="-10dp"
                />

            <TextView
                android:id="@+id/quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"

                android:textColor="@color/teal_700"
                android:textSize="30dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="5dp"
                android:translationY="-5dp"/>

            <Button
                android:id="@+id/increasequantity"
                android:layout_width="52dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:background="@color/teal_700"
                android:text="+"
                android:textSize="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:translationY="-10dp"/>

            <Button
                android:id="@+id/addtocartbutton"
                android:layout_width="112dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="105dp"
                android:layout_marginBottom="0dp"
                android:background="@color/teal_700"
                android:textColor="@color/white"
                android:gravity="center"
                android:text="Add to Cart" />


        </LinearLayout>


    </LinearLayout>
</LinearLayout>